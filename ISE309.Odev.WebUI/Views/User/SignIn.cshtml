@model ISE309.Odev.Shared.DTO.LoginDTO
@{
    ViewData["Title"] = "Giriş Yap";
}

<div class="container">
    <div class="card">
        <div class="card-header">
            <h3 class="float-left text-dark">
                @ViewBag.Title
            </h3>
        </div>
        <div class="card-body mx-5 my-2">
            <form method="post" class="row">
                <div class="form-group col-6">
                    <label asp-for="Email"></label>
                    <input class="form-control" asp-for="Email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group col-6">
                    <label asp-for="Password"></label>
                    <input class="form-control" asp-for="Password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group col-12 d-flex justify-content-center align-items-center">
                    <div class="d-flex justify-content-center ">
                        <a href="@Url.Action("Index","Home")" class="btn btn-danger  mx-1"><i class="fa fa-arrow-left"></i>Geri</a>
                        <button class="btn btn-success mx-1" type="submit"><i class="fa fa-plus"></i>Giriş Yap</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

