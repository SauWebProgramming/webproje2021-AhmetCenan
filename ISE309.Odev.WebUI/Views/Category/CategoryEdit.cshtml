@model ISE309.Odev.Shared.DTO.Category.CategoryEditDTO
@{
    ViewData["Title"] = "CategoryEdit";
}

<h1>Kategori Düzenle</h1>
<div class="container">
    <div class="row">
        <div class="col">
            <form asp-route-id="@ViewBag.id" method="post">
                <div class="container m-5 p-5">
                    <div class="input-group mb-3">
                        <label class="input-group" asp-for="CategoryName"></label>
                        <input class="form-control" asp-for="CategoryName" />
                    </div>
                    <div class="input-group mb-3">
                        <label class="input-group" asp-for="CategoryStatus"></label>
                        <input class="form-control" asp-for="CategoryStatus" />
                    </div>
                    <button class="btn btn-success px-5" type="submit">Kaydet</button>
                </div>
            </form>
        </div>
    </div>
</div>