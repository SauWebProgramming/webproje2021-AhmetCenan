@model ISE309.Odev.Shared.DTO.Menu.MenuCreateDTO
@{
    ViewData["Title"] = "MenuCreate";
}
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer

<h1>@localizer["Yeni Menü"]</h1>
<div class="container">
    <div class="row">
        <div class="col">
            <form asp-route-id="@ViewBag.id" method="post">
                <div class="container m-5 p-5">
                    <div class="input-group mb-3">
                        <label class="input-group">@localizer["Menü Adı"]</label>
                        <input class="form-control" asp-for="MenuName" />
                    </div>
                    <div class="input-group mb-3">
                        <label class="input-group">@localizer["Menü Fiyatı"]</label>
                        <input class="form-control" asp-for="MenuPrice" />
                    </div>
                    <div class="input-group mb-3">
                        <label class="input-group">@localizer["Menü Kategorisi"]</label>
                        <select class="form-control" asp-for="CategoryID">
                            @foreach (var item in ViewBag.categories)
                            {
                                <option value="@item.CategoryID">@item.CategoryName</option>
                            }
                        </select>
                    </div>
                    <div class="input-group mb-3">
                        <label class="input-group">@localizer["Menü Resmi"]</label>
                        <input class="form-control" asp-for="MenuImage" />
                    </div>
                    <button class="btn btn-success px-5" type="submit">@localizer["Ekle"]</button>
                </div>
            </form>
        </div>
    </div>
</div>